void MyBeep(int mode)
{
	switch (mode)
	{
		case 1:
		tone(14,tone_H * 3);
		delay(80);
		tone(14,tone_F * 3);
		delay(80);
		tone(14,tone_H * 3);
		delay(80);
		tone(14,tone_F * 3);
		delay(80);
		tone(14,tone_H * 3);
		delay(80);
		tone(14,tone_F * 3, 300);
		delay(300);
		break;
	}
}
